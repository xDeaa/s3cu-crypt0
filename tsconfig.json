{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "outDir": ".dist"
  },
  "include": [
    "src",
    "types.d.ts"
  ],
  "exclude": ["babel.config.js"]
}